<% layout("/layouts/boilerplate")-%>

    <body>
        <!-- <h2>All Listings</h2> -->
        <div id="filter" class="d-flex flex-row flex-wrap justify-content-evenly align-items-center w-100">
            <div class="filters d-flex flex-column justify-content-center align-items-center">
                <i class="fa-solid fa-fire fs-5"></i>
                <p>Trending</p>
            </div>
            <div class="filters d-flex flex-column justify-content-center align-items-center">
                <i class="fa-regular fa-snowflake fs-5"></i>
                <p>Arctic</p>
            </div>
            <!-- <div class="filters d-flex flex-column justify-content-center align-items-center">
                <i class="fa-solid fa-bed fs-5"></i>
                <p>rooms</p>
            </div> -->
            <div class="filters d-flex flex-column justify-content-center align-items-center">
                <i class="fa-solid fa-water-ladder fs-5"></i>
                <p>Amazing pools</p>
            </div>
            <div class="filters d-flex flex-column justify-content-center align-items-center">
                <i class="fa-brands fa-fort-awesome fs-5"></i>
                <p>Castles</p>
            </div>
            <div class="filters d-flex flex-column justify-content-center align-items-center hideFilter">
                <i class="fa-solid fa-caravan fs-5"></i>
                <p>Camper vans</p>
            </div>
            <div class="filters d-flex flex-column justify-content-center align-items-center hideFilter">
                <i class="fa-solid fa-campground fs-5"></i>
                <p>Camping</p>
            </div>
            <div class="filters d-flex flex-column justify-content-center align-items-center hideFilter">
                <i class="fa-solid fa-mountain-city fs-5"></i>
                <p>Mountain</p>
            </div>
            <div class="filters d-flex flex-column justify-content-center align-items-center hideFilter">
                <i class="fa-solid fa-umbrella-beach"></i>
                <p>Beachfront</p>
            </div>
            <div class="checkBoxSmall">
                <div class="checkBox rounded-3 px-auto d-flex align-items-center">
                    <div class="form-check form-switch form-check-reverse tax-toggle">
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
                        <label class="form-check-label" for="flexSwitchCheckReverse">Display total after taxes</label>
                    </div>
                </div>
            </div>

        </div>
        <br>
        <hr>
        <br>
        <div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-3 gx-5 gy-5">
            <%for(listing of allListings){%>
                <a href="/listings/<%=listing._id%>" class="listing-link">
                    <div class="listing-card col" style="height: 23.5rem !important;">
                        <img src=<%=listing.image.url%> class=" card-img-top" alt="listing_image" style="height:
                        16rem;">
                        <div class=" card-body">
                            <h5 class="mt-1 card-text">
                                <%=listing.title%>, <%=listing.country%>
                            </h5>
                            <p class="card-text opacity-75">
                                &#8377;<%=listing.price.toLocaleString("en-IN")%>/night
                                    <i class="tax">
                                        &nbsp; +18% GST
                                    </i>
                            </p>
                        </div>
                    </div>
                </a>
                <%}%>
        </div>
        <br>
        <script src="/js/home.js"></script>
    </body>