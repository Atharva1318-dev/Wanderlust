<% layout("/layouts/boilerplate")-%>

    <body>
        <div data-bg="<%=listing.image%>" class="overlay-background edit"></div>
        <div class="row gy-5 form-body">
            <div class="offset-sm-2 col-sm-8">
                <form method="post" action="/listings/<%=listing._id%>?_method=PUT"
                    class="new-form py-2 px-3 needs-validation" novalidate enctype="multipart/form-data">
                    <div class="pt-3"
                        style="background-color: #E55658;height: 4rem; border-top-left-radius: 1.5rem;border-top-right-radius: 1.5rem;width: 100%;">
                        <h3 class="mb-3 text-center" style="color: white;">Edit your listing</h3>
                    </div>
                    <hr class="m-2">
                    <div class="mb-2 px-3">
                        <label for="title" class="form-label fs-5">Title</label>
                        <input type="text" name="title" class="form-control rounded-4 shadow-sm cStyle"
                            value="<%=listing.title%>" required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <br>
                    <div class="mb-2 px-3">
                        <div class="mx-auto" style="width:73%;height: 24rem;">
                            <img src="<%=originalImageUrl%>" class="card-img-top rounded-4"
                                style="width:100%;height: 22.675rem;" alt="listing_image">
                        </div>
                        <label for="image" class="form-label fs-5">Upload New Image</label>
                        <input type="file" name="image" id="image" class="form-control rounded-4 shadow-sm cStyle">

                    </div>
                    <br>
                    <div class="mb-2 px-3">
                        <label for="desc" class="form-label fs-5">Description</label>
                        <textarea class="form-control rounded-4 shadow-sm cStyle" name="description"
                            required><%= listing.description %></textarea>
                        <div class="invalid-feedback">Please enter an appropriate description!</div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-lg-4 mb-2 px-3">
                            <label for="price" class="form-label fs-5">Price</label><input type="number"
                                class="form-control rounded-4 shadow-sm cStyle" name="price" value="<%=listing.price%>"
                                required>
                            <div class="invalid-feedback">Please enter a valid price!</div>
                        </div>
                        <br>
                        <div class="col-lg-8 mb-2 px-3">
                            <label for="country" class="form-label fs-5">Country</label>
                            <input type="text" name="country" class="form-control rounded-4 shadow-sm  cStyle"
                                value="<%=listing.country%>" required>
                            <div class="invalid-feedback">Please enter the country!</div>
                        </div>
                    </div>
                    <br>
                    <div class="mb-2 px-3">
                        <label for="loc" class="form-label fs-5">Location</label>
                        <input type="text" name="location" id="loc" class="form-control rounded-4 shadow-sm cStyle"
                            value="<%=listing.location%>" required>
                        <div class="invalid-feedback">Please enter a valid location!</div>
                    </div>
                    <br>
                    <button class="btn btn-outline-dark mb-4 shadow-sm new-btn rounded-4"><i
                            class="fa-regular fa-pen-to-square"></i></button>
                </form>
            </div>
        </div>
    </body>